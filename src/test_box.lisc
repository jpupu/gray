
(def white (rgb .9 .9 .9))

(prim
    (shape box)
    (diffuse (checker (rgb 1 1 1) (rgb .5 .5 .5)) (scale 2))
    )

(prim
    (shape plane)
    (diffuse (solid (rgb .8 .3 .3)))
    (translate <0 -1.01 0>))

(prim
    (shape sphere)
    (mirror (white))
    (emit (rgb 10))
    (translate <-2 3 2>)  (scale .7))

(skylight solid (rgb .05 .1 .2))

(camera thinlens
    (rotate 30 <0 1 0>) (rotate -40 <1 0 0>) (translate <0 0 8>)
    (focal_length 55)
    (focus_distance 7.5)
    (f_number 2.8)
    (size <36 36>))
